@model IEnumerable<ExamPortal.Models.Class>
@if (((List<string>)Session["role"]).Contains("admin"))
{
    <p>
        @Html.ActionLink("Create New", "CreateClass","Admins",new { }, new { @class = "btn btn-primary" })
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pretty_Class_name)
            </th>
            <th>
                Coordinator
            </th>
            @if (((List<string>)Session["role"]).Contains("admin"))
            {
                <th></th>
            }
            </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pretty_Class_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.faculty_name)
                </td>
                @if (((List<string>)Session["role"]).Contains("admin"))
                {
                    <td>
                        
                        @Html.ActionLink("Delete", "DeleteClass","Admins", new { id = item.class_id }, new { @class = "btn btn-danger" })

                    </td>
                }
            </tr>
        }

    </table>
