@model ExamPortal.Models.ViewModels.CreateStudentVM
<h4>Student Details</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.unique_name)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.unique_name)
    </dd>


    <dt>
        @Html.DisplayNameFor(model => model.Pretty_Class_name)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Pretty_Class_name)
    </dd>

</dl>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ChangeStudentLoginDetails","Coordinators"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.user_id)

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.scholar_no)

                <div class="form-group">
                    @Html.LabelFor(model => model.UserLogin.username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserLogin.username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserLogin.username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserLogin.password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserLogin.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserLogin.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change Login Details" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Upgrade Student", "UpgradeStudent", new { scholar_no = Model.scholar_no})
        @Html.ActionLink("Downgrade Student", "DowngradeStudent", new { scholar_no = Model.scholar_no })
    </div>
</div>
