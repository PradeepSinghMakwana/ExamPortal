@using ExamPortal.Models;
@model IEnumerable<UnregisteredTest>
<style>
    .block {
        border:1px solid gray;
        padding:5px;
        margin:5px;
    }
    .show-registered {
        color:greenyellow;
        font-weight:bold;
    }
</style>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="block">
                    <div class="row">
                        <div class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.test_id)
                        </div>
                        <div class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.test_name)
                        </div>
                        <div class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.subject_name)
                        </div>
                        <div class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.date)
                        </div>
                        <div class="col-lg-2">
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.DisplayFor(modelItem => item.start_time)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.DisplayFor(modelItem => item.end_time)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.registered)
                            @if (item.registered==1)
                            {
                                <span class="show-registered">Registered</span>
                            } else {
                                @Html.ActionLink("Submit", "RegisterMeForTest", "Students", new { id = item.test_id }, new { @class = "btn btn-block" })
                            }
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>
