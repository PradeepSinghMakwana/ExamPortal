@model IEnumerable<ExamPortal.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateClass","Admins", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.semester)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.semester)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditClass","Admins", new { id=item.class_id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "DetailsClass","Admins", new { id=item.class_id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "DeleteClass","Admins", new { id=item.class_id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
