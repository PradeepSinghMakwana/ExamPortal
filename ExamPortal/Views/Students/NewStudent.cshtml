<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
<script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>-->

<script>
    $(function () {

        if (!$('#is_residence_permanent').checked) {
            $(function () {
                $('#permanent_address').val($('#residential_address').val());
            });
        }

        $('#is_residence_permanent').click(function () {
            if (this.checked) {
                $('#permanent_address').val($('#residential_address').val());
            }
        });

    @foreach (var qual12 in Model.qualification_In_12s)
    {
        @:if (!$('#qual12_@(qual12.subject_code)_has_subject').checked) {
            @:$(function () {
                @:$('#qual12_@(qual12.subject_code)_percent_marks').toggle(this.checked);
            @:});
        @:}

        @:$('#qual12_@(qual12.subject_code)_has_subject').click(function () {
                @:$('#qual12_@(qual12.subject_code)_percent_marks').toggle(this.checked);
        @:});
    }
        
    });
</script>